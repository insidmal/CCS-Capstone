@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}
<center>
    <br />
    <h1>User Roles</h1>


    <div class="text-danger" asp-validation-summary="ModelOnly"></div>


        <table cellspacing="3" class="table table-condensed" style="min-width:50%; max-width:400px">
            <thead>
                <tr><th>Name</th><th></th></tr>
            </thead>
            @if (Model.Count() == 0)
    {
        <tr><th colspan="4" class="text-center">No Roles</th></tr>

}
else
{
foreach (var role in Model)
{
        <tr>

            <td>@role.Name</td>
            <td align="right">
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <a class="btn button" asp-action="Edit"
                       asp-route-id="@role.Id">Edit</a>
                    <button type="submit"
                            class="btn button-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
}
}
        </table>

        <a class="btn button" asp-action="Create">Create Role</a>
</center>