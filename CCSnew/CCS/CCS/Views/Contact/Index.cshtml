@model CCS.Models.ContactViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-content" id="startchange">
    @if (ViewBag.Message == null)
    {
        <center><h1>Send Us a Message</h1></center>
        <center>
            <div asp-validation-summary=" All" class="text-danger"></div>
            <form class="form" method="post">

            <input asp-for="Name" type="text" placeholder="Name">

            <input asp-for="Email" type="text" placeholder="Email">

            <input asp-for="Subject" type="text" placeholder="Subject">

            <input asp-for="Message" type="text" placeholder="Message">

            <button class="btn btn-primary" style="float: left;" type="submit" value="Submit">Submit</button>

