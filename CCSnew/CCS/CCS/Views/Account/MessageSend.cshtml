@model Message
@{
    ViewData["Title"] = "Send a Message";
}



<br />
<br>
<center><h1>Send a Message</h1></center>
<br /><center><span style="color:red; font-weight:bold">@ViewBag.Message</span></center>
<br>

<center>
    <form method="post" class="form">
        <input asp-for="ToUser" placeholder="Send To">
        <input type="hidden" asp-for="FromID" />
        <input asp-for="Subject" placeholder="Subject" />
        <textarea asp-for="Text" placeholder="Message"></textarea>
        <button class="btn button" style="float: left;" type="submit" value="Submit">Submit</button><a asp-action="MessageList" style="float: left;margin-left:15px;" class="btn button-danger">Cancel</a>
    </form>
<br />
</center>

<script type="text/javascript" src="/Home/memberMessageList"></script>