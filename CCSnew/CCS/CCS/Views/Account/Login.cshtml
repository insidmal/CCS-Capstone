@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<br>
<div class="container-content" id="startchange">
    <center><h1>Login to your account</h1></center>
    <br />

    <div asp-validation-summary=" All" class="text-danger"></div>
    <form asp-action="Login" method="post">

        <input asp-for="Email" type="text" placeholder="Email">

        <input asp-for="Password" type="text" placeholder="Password">

        <br />
        <br />

        <button class="btn btn-primary" style="float: left;" type="submit" value="Submit">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    </form>
</div>
