@model int
@inject UserManager<User> UserManager
@{
    ViewData["Title"] = "Index";
}

<br>
<div class="container-content" id="startchange">
    <center>
        <h1>Welcome!</h1>
        <p>
            <strong>
                Hi, @UserManager.GetUserName(User)!  @if (Model > 0)
            {<span>You Have @Model New Messages.</span>}
            </strong>
        </p>
        <p>
            <a class="btn button" asp-action="MessageList">View Your Messages</a>
        </p>
        <p>
            <a class="btn button" asp-action="ProjectList">View Your Projects</a>
        </p>


    
            <div style="margin:20px;">@Html.Raw(ViewBag.Message)</div>
 
       
    </center>
</div>


