    ViewData["Title"] = "Your Projects";
}
<br />
<br />
<center><h1>Your Projects</h1></center>
<br /><center><span style="color:red; font-weight:bold">@ViewBag.Message</span></center>
<br />
<center><a asp-action="ProjectRequest" class="btn button">Request a Project</a></center>
<br />
<center>
        <table cellspacing="3" class="table table-condensed">
            <thead><tr><th>Project Name</th><th>Status</th><th>Origination Date</th></tr></thead>

            @foreach (Project p in Model)
            {
                <tr class="clickable-row" data-href="/Account/ProjectView/@p.ID"><td>@p.Name</td><td>@p.Progress</td><td>@p.QuoteDate</td></tr>
            }
        </table>
<br />&nbsp;<br />
</center>


<script type="text/javascript">
    $(document).ready(function () {
        $(".clickable-row").click(function () {
            window.location = $(this).data("href");
        });
    });
</script>