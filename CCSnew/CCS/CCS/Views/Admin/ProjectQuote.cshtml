<center><h1>Quote Project</h1></center>
<br/>
<center>
    <div style="width:20%">
        <form method="post" class="form">
            <input type="hidden" name="projectId" value="@Model" />
            <h2 style="text-align:left;">@ViewBag.ProjectName</h2>
            <h3 style="text-align:left;">@ViewBag.ProjectDescription</h3>
            <br />&nbsp;<br />
            <input type="number" name="quote" /><br />
            <button class="btn button" style=" float:left; " type="submit" value="Submit">Add a quote</button> <a asp-action="ProjectView" asp-route-id="@Model" style="float: left;margin-left:15px;" class="btn button-danger">Cancel</a>
        </form>
    </div>
</center>
