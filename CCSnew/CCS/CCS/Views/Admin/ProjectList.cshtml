<h2>Projects</h2>
<a asp-action="ProjectAdd">New Project</a><br />
<table>
     <thead><tr><td>Customer</td><td>Project Name</td><td>Status</td><td>Origination Date</td></tr></thead>

@foreach (Project p in Model)
{
    <tr><td>@p.CustomerID</td><td><a asp-action="ProjectView" asp-route-id="@p.ID">@p.Name</a></td><td>@p.Progress</td><td>@p.QuoteDate</td></tr>
}
 </table>
    
    



