@model Note
@{
    ViewData["Title"] = "NoteEdit";
}

<br/>
<br />
<br />
<br />
<center><h1>Edit Note</h1></center>
<br/>
<center>
    <form method="post" class="form">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="From" />
        <input type="hidden" asp-for="ProjectID" />
        <input type="hidden" asp-for="Date" />
        <textarea asp-for="Text" placeholder="Note:"></textarea>
        <br /><input asp-for="Visible" /> Make Note Visible to Client

        <button class="btn button" style="float: left;" type="submit" value="Submit">Submit</button> <a asp-action="ProjectView" asp-route-id="@Model.ProjectID" style="float: left;margin-left:15px;" class="btn button-danger">Cancel</a>

    </form>
</center>