@model CCS2.Models.LocalPasswordModel

<link href="~/Content/clientlayout.css" rel="stylesheet" type="text/css" />
<link href="~/Content/clientstyle.css" rel="stylesheet" type="text/css" />

    @using (Html.BeginForm("Manage", "Account"))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <ol>
                <li class="row"><h3>Change password</h3></li>
                <li class="row">@Html.ValidationSummary(false, string.Empty, new { @class = "loginerror" })</li>
                <li class="row">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-xs-12 col-sm-3 col-lg-2 loginline" })
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "col-sm-4 col-lg-3 " })
                </li>
                <li class="row">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-xs-12 col-sm-3 col-lg-2 loginline" })
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "col-sm-4 col-lg-3 " })
                </li>
                <li class="row">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-xs-12 col-sm-3 col-lg-2 loginline" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-sm-4 col-lg-3 " })
                </li>
                <li class="row">
                    <input type="submit" value="Change password" class="col-sm-offset-3 col-sm-4 col-md-offset-3 col-lg-offset-2 col-lg-3" />
                </li>
            </ol>
        </fieldset>
    }